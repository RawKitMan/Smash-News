<div id="articles">
    {{#each dbArticles}}
    <div class="mt-5">
        <p id={{_id}}>{{title}}</p>
        <p>{{summary}}</p>
        <a href={{article_url}} target="_blank">Link</a>
        <button id="note-btn" data-id={{_id}} type="button" class="btn btn-primary btn-sm">Add Note</button>
        {{#if saved}}
        <button id="unsave-btn" data-id={{_id}} type="button" class="btn btn-danger btn-sm">Unsave Article</button>
        {{else}}
        <button id="save-btn" data-id={{_id}} type="button" class="btn btn-danger btn-sm">Save Article</button>
        <button id="remove-unsaved" data-id={{_id}} type="button" class="btn btn-danger btn-sm">Remove</button>
        {{/if}}
    </div>
    {{/each}}

</div>